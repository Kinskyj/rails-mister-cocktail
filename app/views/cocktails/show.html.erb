  <div class="container">

    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="show-title">
          <h1><%= @cocktail.name %></h1>
        </div>
      </div>
    </div>

     <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
