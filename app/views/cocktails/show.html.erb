    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <% @doses.each do |dose| %>
          <div class="product">
            <div class='product-body'>
              <h3><%= dose.ingredient.name %>  (<%= dose.description %>)</h3>
            </div>
            <%= link_to "Delete", dose_path(dose), :method => 'delete'%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="pt-20">
