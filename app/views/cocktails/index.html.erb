<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path "banner.jpg" %>');">
  <div class="banner-content">
    <h1>Your cocktail list</h1>
  </div>
</div>


<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <% img_number = (1..10).to_a.sample %>
        <div class="col-xs-12 col-sm-4">
          <!-- <%= link_to "More info", cocktail_path(cocktail) %> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "cocktail_#{img_number}.jpeg" %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
              <p><%= cocktail.doses.count %> ingrediends</p>
            </div>
            <%= link_to "", cocktail_path(cocktail), {class: "card-link"} %>
          </div>
        </div>
      <% end %>
      </div>
      <div class="button-spacing">
        <%= link_to "Add a cocktail", new_cocktail_path, {class: "btn btn-primary"} %>
      </div>
    </div>
  </div>
</div>
