<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path "banner.jpg" %>');">
  <div class="banner-content">
    <h1>Your cocktail list</h1>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <% @cocktails.each do |cocktail| %>
          <div class="product">
            <%= link_to cocktail_path(cocktail), :method => 'patch' do %>
              <div class='product-upvote'>
                <div class="product-arrow"></div>
                <div class='product-count'><%= cocktail.votes %></div>
              </div>
            <% end %>
            <%= link_to cocktail_path(cocktail) do %>
              <% if cocktail.photo? %>
                <%= cl_image_tag cocktail.photo, width: 180, height: 80, crop: :crop, class: "product-image hidden-xs" %>
              <% else  %>
                <div class="no-picture">
                  <p>No picture</p>
                </div>
              <% end  %>
            <% end %>
            <div class='product-body'>
              <h3><%= cocktail.name %></h3>
              <p><%= cocktail.ingredients.count %> ingredients</p>
            </div>
            <div>
              <%= link_to "Upvote", cocktail_path(cocktail), {:method => 'patch', class: "btn btn-primary"} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
